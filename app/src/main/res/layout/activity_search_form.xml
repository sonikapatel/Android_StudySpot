<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    tools:context="acad277.patel.sonika.final_project.MainActivity"            android:weightSum="1"
    android:background="#2E314C"

    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#EA748E"
            android:id="@+id/main_toolbar"
            android:layout_marginBottom="30dp"
            android:background="@color/colorPrimary"
            android:titleTextColor="#fff"
            android:subtitleTextColor="#fff"


            >
        </android.support.v7.widget.Toolbar>
    </RelativeLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#2E314C"
        android:id="@+id/scroll"
        >



    <GridLayout
        android:layout_below="@+id/scroll"

        android:id="@+id/GridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_gravity="center"
        android:orientation="horizontal"
        tools:context=".GridXMLActivity"
        android:background="#2E314C"
        >

        <android.support.v7.widget.CardView
            app:cardCornerRadius="1dp"
            app:cardElevation="10dp"
            android:layout_width="154dp"
            android:layout_height="154dp"
            android:id="@+id/view2"
            android:backgroundTint="#E2718B"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"

            android:layout_alignParentStart="true">
        <ImageButton

            android:src="@drawable/coffee"
            android:backgroundTint="#E2718B"
            android:id="@+id/coffee"

            android:layout_gravity="left|top"
            android:text="Coffee Shop"
            android:scaleType="fitCenter"
            android:layout_width="154dp"
            android:layout_height="154dp" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            app:cardCornerRadius="1dp"
            app:cardElevation="10dp"
            android:layout_width="154dp"
            android:layout_height="154dp"
            android:backgroundTint="#CD6A84"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"

            android:layout_alignParentStart="true">
        <ImageButton

            android:src="@drawable/lib"
            android:backgroundTint="#CD6A84"
            android:id="@+id/Library"

            android:layout_gravity="left|top"
            android:text="Coffee Shop"
            android:scaleType="fitCenter"
            android:layout_width="156dp"
            android:layout_height="156dp" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            app:cardCornerRadius="1dp"
            app:cardElevation="10dp"
            android:layout_width="154dp"
            android:layout_height="154dp"
            android:backgroundTint="#B3617B"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"

            android:layout_alignParentStart="true">
        <ImageButton

            android:src="@drawable/park"
            android:backgroundTint="#B3617B"
            android:id="@+id/Park"


            android:layout_gravity="left|top"
            android:text="Park"
            android:scaleType="fitCenter"
            android:layout_width="154dp"
            android:layout_height="154dp" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            app:cardCornerRadius="1dp"
            app:cardElevation="10dp"
            android:layout_width="154dp"
            android:layout_height="154dp"
            android:backgroundTint="#9E5973"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"

            android:layout_alignParentStart="true">
        <ImageButton

            android:src="@drawable/stu"
            android:backgroundTint="#9E5973"
            android:id="@+id/StudyRoom"

            android:layout_marginRight="5dp"

            android:layout_gravity="left|top"
            android:text="Park"
            android:scaleType="fitCenter"
            android:layout_width="154dp"
            android:layout_height="154dp" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            app:cardCornerRadius="1dp"
            app:cardElevation="10dp"
            android:layout_width="154dp"
            android:layout_height="154dp"
            android:backgroundTint="#91546F"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"

            android:layout_alignParentStart="true">
        <ImageButton

            android:src="@drawable/patio1"
            android:backgroundTint="#91546F"
            android:id="@+id/Patio"

            android:layout_gravity="left|top"
            android:text="Park"
            android:scaleType="fitCenter"
            android:layout_width="154dp"
            android:layout_height="154dp" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            app:cardCornerRadius="1dp"
            app:cardElevation="10dp"
            android:layout_width="154dp"
            android:layout_height="154dp"
            android:backgroundTint="#84506A"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_alignParentStart="true"
            >

            <ImageButton
                android:src="@drawable/roof1"
                android:backgroundTint="#84506A"
                android:id="@+id/Rooftop"
                android:layout_gravity="left|top"
                android:text="Park"
                android:scaleType="fitCenter"
                android:layout_width="154dp"
                android:layout_height="154dp" />
        </android.support.v7.widget.CardView>


    </GridLayout>

</ScrollView>
</LinearLayout>